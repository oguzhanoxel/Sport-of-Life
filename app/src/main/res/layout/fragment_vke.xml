<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.menuItems.VKE">

    <LinearLayout
        android:background="@color/blue_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:editable="false"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:text="Vücut Kütle Endeksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/softboxorange"/>
        <EditText
            android:id="@+id/weight"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:hint="Kilonuzu Giriniz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/softboxblue"/>
        <EditText
            android:id="@+id/height"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:hint="Boyunuzu Giriniz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/softboxblue"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/calcBtn"
                android:background="@drawable/softboxorange"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hesapla"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>