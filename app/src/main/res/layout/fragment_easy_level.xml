<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.menuItems.EasyLevel">

    <LinearLayout
        android:background="@android:color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/easyOmuz"
            android:layout_margin="20sp"
            android:text="OMUZ"
            android:textColor="#4564FF"
            android:textSize="30sp"
            android:shadowColor="#345FA8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_blue"/>
        <Button
            android:id="@+id/easySirt"
            android:layout_margin="20sp"
            android:text="SIRT"
            android:textColor="#4564FF"
            android:textSize="30sp"
            android:shadowColor="#345FA8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_blue"/>
        <Button
            android:id="@+id/easyGogus"
            android:layout_margin="20sp"
            android:text="GÖĞÜS"
            android:textColor="#4564FF"
            android:textSize="30sp"
            android:shadowColor="#345FA8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_blue"/>
        <Button
            android:id="@+id/easyOnarkakol"
            android:layout_margin="20sp"
            android:text="ÖN-ARKA KOL"
            android:textColor="#4564FF"
            android:textSize="30sp"
            android:shadowColor="#345FA8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_blue"/>
    </LinearLayout>

</FrameLayout>